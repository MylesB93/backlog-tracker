@page
@model BacklogTracker.Areas.Users.Pages.UserPageModel
@{
	var games = Model.GamesList;
	var completedGames = Model.CompletedGamesList;
	var userName = Model.User.Identity?.Name ?? "User";
}

<section class="mb-4">
	<h1 class="page-section-title mb-1">@userName</h1>
	<p class="subtle-muted mb-0">Games currently in their backlog and those they have completed.</p>
</section>

<h2 class="page-section-title">Backlog</h2>
@if (games != null && games.Any())
{
	<ul class="games-list">
		@foreach (var game in games)
		{
			<li class="backlog-item">
				<a href="@game.Url" target="_blank">@game.Name</a>
			</li>
		}
	</ul>
}
else
{
	<p>This user has not added any games to their backlog.</p>
}

<h2 class="page-section-title mt-4">Completed Games</h2>
@if (completedGames != null && completedGames.Any())
{
	<ul class="games-list">
		@foreach (var game in completedGames)
		{
			<li class="backlog-item">
				<a href="@game.Url" target="_blank">@game.Name</a>
			</li>
		}
	</ul>
}
else
{
	<p>This user has not completed any games.</p>
}