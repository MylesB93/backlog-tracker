<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BacklogTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BacklogTracker.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body class="app-shell">
    <header class="app-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark app-navbar">
            <div class="container-fluid app-navbar-inner">
                <a class="navbar-brand app-logo" asp-area="" asp-page="/Index">
                    <span class="logo-mark">BT</span>
                    <span class="logo-text">Backlog Tracker</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="app-main">
        <div class="container app-container">
            <main role="main" class="app-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="app-footer border-top text-muted">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; @DateTime.Now.Year - Backlog Tracker</span>
            <span class="footer-meta">Built for gamers who finish what they start</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>